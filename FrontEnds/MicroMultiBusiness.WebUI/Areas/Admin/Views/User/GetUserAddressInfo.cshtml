@model GetCargoCustomerByIdDTO
@{
    ViewData["Title"] = "GetUserAddressInfo";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <h3>User Contact Details</h3>
                    <div class="alert alert-info">User Id : @Model.UserId</div>
                    <div class="alert alert-warning">Full Name : @Model.Name @Model.LastName</div>
                    <div class="alert alert-info">Email : @Model.Email</div>
                    <div class="alert alert-warning">Phone Number : @Model.Phone</div>
                    <div class="alert alert-info">District - City : @Model.District - @Model.City</div>
                    <div class="alert alert-warning">Address : @Model.Address</div>
                </div>
            </div>
        </div>
    </div>
</section>


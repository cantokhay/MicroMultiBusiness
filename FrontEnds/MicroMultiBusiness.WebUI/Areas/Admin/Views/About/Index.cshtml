@model List<ResultAboutDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int i = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>About Description</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@item.Description</td>
                                    <td>@item.Address</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td><a href="/Admin/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Delete</a></td>
                                    <td><a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-warning">Update</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Admin/About/CreateAbout/" class="btn btn-success">Create a About</a>
                </div>
            </div>
        </div>
    </div>
</section>
@model List<ResultBrandDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int i = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Brand Title</th>
                                <th>Brand ImageURL</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@item.BrandName</td>
                                    <td>@item.BrandImageURL</td>
                                    <td><a href="/Admin/Brand/DeleteBrand/@item.BrandId" class="btn btn-danger">Delete</a></td>
                                    <td><a href="/Admin/Brand/UpdateBrand/@item.BrandId" class="btn btn-warning">Update</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Admin/Brand/CreateBrand/" class="btn btn-success">Create a Brand</a>
                </div>
            </div>
        </div>
    </div>
</section>
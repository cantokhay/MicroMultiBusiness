@model List<ResultSpecialOfferDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int i = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Special Offer Title</th>
                                <th>Special Offer Subtitle</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@item.Title</td>
                                    <td>@item.Subtitle</td>
                                    <td><a href="/Admin/SpecialOffer/DeleteSpecialOffer/@item.SpecialOfferId" class="btn btn-danger">Delete</a></td>
                                    <td><a href="/Admin/SpecialOffer/UpdateSpecialOffer/@item.SpecialOfferId" class="btn btn-warning">Update</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Admin/SpecialOffer/CreateSpecialOffer/" class="btn btn-success">Create a Special Offer</a>
                </div>
            </div>
        </div>
    </div>
</section>
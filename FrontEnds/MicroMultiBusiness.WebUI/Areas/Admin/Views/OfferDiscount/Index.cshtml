@model List<ResultOfferDiscountDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int i = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Offer Discount Title</th>
                                <th>Offer Discount Subtitle</th>
                                <th>Offer Discount Image URL</th>
                                <th>Offer Discount Button Title</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@item.OfferDiscountTitle</td>
                                    <td>@item.OfferDiscountSubtitle</td>
                                    <td>@item.OfferDiscountImageURL</td>
                                    <td>@item.OfferDiscountButtonTitle</td>
                                    <td><a href="/Admin/OfferDiscount/DeleteOfferDiscount/@item.OfferDiscountId" class="btn btn-danger">Delete</a></td>
                                    <td><a href="/Admin/OfferDiscount/UpdateOfferDiscount/@item.OfferDiscountId" class="btn btn-warning">Update</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Admin/OfferDiscount/CreateOfferDiscount/" class="btn btn-success">Create a Offer Discount</a>
                </div>
            </div>
        </div>
    </div>
</section>

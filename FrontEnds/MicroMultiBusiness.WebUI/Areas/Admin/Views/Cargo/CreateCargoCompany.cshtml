@model CreateCargoCompanyDTO
@{
    ViewData["Title"] = "CreateCargoCompany";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Add a new Cargo Company</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <label> Cargo Company Name</label>
                        <input type="text" asp-for="CargoCompanyName" class="form-control" />
                        <br />
                        <button class="btn btn-primary">Create a Cargo Company</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>


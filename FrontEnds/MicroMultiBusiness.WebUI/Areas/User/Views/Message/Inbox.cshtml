@model List<ResultInboxMessageDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int i = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Messages Inbox</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Sender</th>
                                        <th>Subject</th>
                                        <th>Sent Date</th>
                                        <th>Status</th>
                                        <th>Delete</th>
                                        <th>Message Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        i++;
                                        <tr>
                                            <th>@i</th>
                                            <td>@item.SenderId</td>
                                            <td>@item.Subject</td>
                                            <td>@(((DateTime)item.MessageSentDate).ToString("mm - HH - dd - MMM - yyyy"))</td>
                                            <td>@item.IsRead</td>
                                            <td><a href="#" class="btn btn-danger">Delete</a></td>
                                            <td><a href="#" class="btn btn-info">Details..</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

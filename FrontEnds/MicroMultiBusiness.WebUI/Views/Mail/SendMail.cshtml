@model MailRequest
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <div class="alert alert-success">
        <h3>Mail Operations</h3>
        <form method="post">
            <label>Mail To: </label>
            <input type="text" asp-for="ReceiverMail" placeholder="To" class="form-control" />
            <br />
            <label>Mail Subject: </label>
            <input type="text" asp-for="Subject" placeholder="Subject" class="form-control" />
            <br />
            <label>Mail Body: </label>
            <textarea rows="5" class="form-control" asp-for="Message" placeholder="Your Message..."></textarea>
            <br />
            <button class="btn btn-primary">Send Mail</button>
        </form>
    </div>
</div>
